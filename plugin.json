{
  "id": "flux-image-generator",
  "name": "Flux Image Generator",
  "description": "Generate images using Flux models (flux-dev, flux-pro, flux-schnell) via Fal.ai.",
  "version": "1.0.0",
  "author": "King",

  "type": "custom-plugin",
  "implementationType": "javascript",
  "action": "run",

  "userSettings": [
    {
      "name": "falKey",
      "label": "Fal.ai API Key",
      "type": "password",
      "required": true,
      "description": "Your Fal.ai API key (get it from https://fal.ai)"
    },
    {
      "name": "model",
      "label": "Flux Model",
      "type": "select",
      "options": [
        { "label": "flux-dev", "value": "flux-dev" },
        { "label": "flux-pro", "value": "flux-pro" },
        { "label": "flux-schnell", "value": "flux-schnell" }
      ],
      "defaultValue": "flux-dev"
    },
    {
      "name": "width",
      "label": "Width",
      "type": "number",
      "defaultValue": 1024
    },
    {
      "name": "height",
      "label": "Height",
      "type": "number",
      "defaultValue": 1024
    }
  ],

  "inputs": [
    {
      "id": "prompt",
      "label": "Prompt",
      "type": "text",
      "required": true
    },
    {
      "id": "negative_prompt",
      "label": "Negative Prompt",
      "type": "text"
    }
  ]
}

{
  "id": "flux-image-generator",
  "name": "Flux Image Generator",
  "version": "1.0.0",
  "description": "Generate images using Flux models (flux-dev, flux-pro, flux-schnell) via Fal.ai",
  "type": "custom-plugin",
  "implementationType": "javascript",
  "author": "King",

  "actions": [
    {
      "id": "run",
      "name": "Generate Image",
      "description": "Generate an image using the selected Flux model.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Image description",
            "required": true
          },
          "negative_prompt": {
            "type": "string",
            "description": "Things to avoid"
          }
        }
      }
    }
  ],

  "userSettings": [
    {
      "name": "falKey",
      "label": "Fal.ai API Key",
      "type": "password",
      "required": true
    },
    {
      "name": "model",
      "label": "Flux Model",
      "type": "select",
      "options": [
        { "label": "flux-dev", "value": "flux-dev" },
        { "label": "flux-pro", "value": "flux-pro" },
        { "label": "flux-schnell", "value": "flux-schnell" }
      ],
      "defaultValue": "flux-dev"
    },
    {
      "name": "width",
      "label": "Width",
      "type": "number",
      "defaultValue": 1024
    },
    {
      "name": "height",
      "label": "Height",
      "type": "number",
      "defaultValue": 1024
    }
  ]
}

{
  "name": "flux-image-generator",
  "version": "1.0.0",
  "display_name": "Flux Image Generator",
  "description": "Generate images using Flux.1 (Pro, Dev, Schnell) via FAL.ai.",
  "author": "King",
  "icon": "ðŸŽ¨",
  "settings": {
    "falApiKey": {
      "label": "FAL API Key",
      "type": "text",
      "required": true,
      "placeholder": "Enter your FAL.ai API Key"
    },
    "defaultModel": {
      "label": "Default Flux Model",
      "type": "select",
      "required": true,
      "options": ["flux-pro", "flux-dev", "flux-schnell"],
      "default": "flux-pro"
    },
    "width": {
      "label": "Image Width",
      "type": "number",
      "default": 1024
    },
    "height": {
      "label": "Image Height",
      "type": "number",
      "default": 1024
    }
  },
  "actions": {
    "generate_flux_image": {
      "name": "Generate Flux Image",
      "input_schema": {
        "prompt": {
          "type": "string",
          "required": true
        },
        "negative_prompt": {
          "type": "string",
          "required": false
        },
        "model": {
          "type": "string",
          "required": false,
          "enum": ["flux-pro", "flux-dev", "flux-schnell"]
        },
        "seed": {
          "type": "number",
          "required": false
        }
      }
    }
  }
}
